[Unit]
Description=Goalkeepr

After=network-online.target
Wants=network-online.target

StartLimitIntervalSec=600
StartLimitBurst=5

[Service]
Type=exec
User=github-service-account
Group=github-service-account
EnvironmentFile=/etc/goalkeepr.env
WorkingDirectory=/home/github-service-account
ExecStart=/usr/local/bin/goalkeepr \
  -port=6000 \
  -env=production \
  -database-driver=sqlite \
  -database-path=${DB_DSN}

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target